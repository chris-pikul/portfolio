---
import Colors from '@scripts/Colors';

const alternate:boolean = !!Astro.props.alternate;
const from:string = Astro.props.from ?? 'white';
const to:string = Astro.props.to ?? 'black';

interface ColorBand {
  start:string,
  middle:string,
  end:string,
};

const band:ColorBand = {
  start: Colors.shade200,
  middle: Colors.shade400,
  end: Colors[to],
};

if(to === 'black') {
  switch(from) {
    case 'primary':
      band.start = Colors.primary600;
      band.middle = Colors.primary700;
      break;
    case 'secondary':
      band.start = Colors.secondary600;
      band.middle = Colors.secondary700;
      break;
    case 'tertiary':
      band.start = Colors.tertiary00;
      band.middle = Colors.tertiary700;
      break;
  }
} else {
  switch(to) {
    case 'black':
      band.start = Colors.shade300;
      band.middle = Colors.shade600;
      break;
    case 'primary':
      band.start = Colors.primary100;
      band.middle = Colors.primary200;
      break;
    case 'secondary':
      band.start = Colors.secondary100;
      band.middle = Colors.secondary200;
      break;
    case 'tertiary':
      band.start = Colors.tertiary100;
      band.middle = Colors.tertiary200;
      break;
  }
}

---
{
  alternate ?
  (
  <svg class="section-transition" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1920 480">
    <path d="M1,150s109.5-41.5,464.5-38.5C898.48,115.16,1920,363,1920,363v45L1,411Z" fill={band.start} style={`fill: ${band.start}`}/>
    <path d="M1,328c262-2,911-200,1345-194s574,75,574,75V477L1,480Z" fill={band.middle} style={`fill: ${band.middle}`} />
    <path d="M1920,474.46C1668.62,474.46,1182,282,728,282S1,387.08,1,387.08V481l1919-1Z" fill={band.end} style={`fill: ${band.end}`} />
  </svg>
  ) : (
  <svg class="section-transition" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1920 480">
    <path d="M1,315c400-4,776-174,1288-173s631,58,631,58V372L1,375Z" fill={band.start} style={`fill: ${band.start}`} />
    <path d="M1,210s156-52,518-49c423,3.51,970,227,1401,153V468L1,443Z" fill={band.middle} style={`fill: ${band.middle}`} />
    <path d="M1,402c385.54-9.76,731-139,1134-135s785,173,785,173v40L1,481Z" fill={band.end} style={`fill: ${band.end}`} />
  </svg>
  )
}

<style lang="scss">
  .section-transition {
    width: 100%;
    height: auto;
    object-fit: contain;
    margin: 0 0 -1px 0;
    
    path {
      filter: drop-shadow(0.5rem -0.5rem 2rem rgb(0 0 0 / 15%));
    }
  }
</style>
