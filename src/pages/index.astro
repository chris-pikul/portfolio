 * 
 * Index page, AKA "home"
 */
import MasterLayout from '@layouts/MasterLayout.astro';
import Title from '@components/Title.astro';

---
<MasterLayout>
  <section id='intro-hero' class='intro-first page'>
    <div id='intro-hero-wrapper'>
      <h1>Chris Pikul</h1>
      <h2>[ Software Developer ]</h2>
    </div>
  </section>

  <section class='page'>
    <div id='about' class='hidden section-anchor' />
    <Title text='About Me' />

    <p>Hello, my name is Chris Pikul and I'm a Software Developer from the San Francisco Bay Area in California.</p>
    <p>I have a passion for creating things, and that doesn't stop at coding, although that is my primary focus.
      My primary technologies are: TypeScript/JavaScript, CSS, Go, and C++; but I have
      dabbled in plenty of others (gotta get back into Rust, for one). As of 2018 I've been the Co-Founder and
      Chief Technology Officer of <a href='https://workmaple.com'>Maple</a>, a start-up located in Istanbul, Turkiye
      providing a B2B platform of business technology solutions currently focused on retail operations.</p>
  </section>
</MasterLayout>

<style lang="scss">
  @use '../styles/base' as *;
  @use '../styles/colors' as *;

  #intro-hero {
    display: flex;
    flex-flow: column nowrap;
    justify-content: space-around;
    align-items: center;

    flex: 1;

    h1 {
      margin-bottom: 1rem;

      @include font-common(2.2rem);
      text-align: center;
      text-transform: uppercase;
      color: $shade-700;
      color: var(--shade-700);

      text-shadow: 0px 4px 0.1em rgb(0 0 0 / 0.5);
    }

    h2 {
      @include font-code(0.8rem);
      text-align: center;
      color: $shade-600;
      color: var(--shade-600);

      text-shadow: 0px 2px 4px rgb(0 0 0 / 0.2);
    }
  }

  @media screen and (min-width: 768px) {
    #intro-hero {
      h1 { font-size: 3rem; }
      h2 { font-size: 1rem; }
    }
  }

  @media screen and (min-width: 1080px) {
    #intro-hero {
      h1 { font-size: 4rem; }
      h2 { font-size: 1rem; }
    }
  }

  @media screen and (min-width: 1350px) {
    #intro-hero {
      h1 { font-size: 4rem; }
      h2 { font-size: 1.2rem; }
    }
  }

  @media screen and (min-width: 1500px) {
    #intro-hero {
      h1 { font-size: 5rem; }
      h2 { font-size: 1.3rem; }
    }
  }
</style>