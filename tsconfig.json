{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@layouts/*": ["src/layouts/*"],
      "@styles/*": ["src/styles/*"],
      "@scripts/*": ["src/scripts/*"]
    },
    "noEmit": true,
    "types": ["astro/client"],
    "jsx": "preserve",
    "jsxImportSource": "solid-js"
  },
  "include": [ "src/**/*" ],
  "exclude": [ "node_modules" ]
}